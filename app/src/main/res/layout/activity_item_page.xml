<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_light_50"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include
        android:id="@+id/header"
        layout="@layout/header"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        app:tabRippleColor="@color/transparent"
        android:background="@color/header_background"
        app:tabTextColor="@color/tab_layout_text_color"
        app:tabSelectedTextColor="@color/tab_layout_text_color_selected"

        app:tabIndicatorFullWidth="false"
        app:tabIndicatorColor="@color/tab_layout_text_color_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>